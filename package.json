{
  "name": "litpress",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"tailwindcss -i .\\src\\tailwind\\input.css -o .\\src\\tailwind\\tailwind.css --watch\" \"twlit --output .\\src\\tailwind\\twlit.js --input .\\src\\tailwind\\tailwind.css \" ",
    "clean": "if exist build rmdir /s /q build",
    "serve": "node dist-server/app.js",
    "build": "cross-env VITE_APP_URL=https://vistax.netlify.app vite build",
    "postbuild": "copy _redirects dist",
    "preview": "vite preview",
    "lighthouse": "concurrently \"vite preview\" \"lighthouse http://localhost:4173 --budget-path=./budget.json --view\" ",
    "light-build": "node clean-lighthouse-report.js && cross-env VITE_APP_URL=http://localhost:4173 vite build && concurrently \"npm run lighthouse\" "
  },
  "dependencies": {
    "@firebase/app": "^0.9.15",
    "@firebase/auth": "^1.1.0",
    "@firebase/firestore": "^4.1.0",
    "axios": "^1.4.0",
    "esm": "^3.2.25",
    "express": "^4.18.2",
    "fa-icons": "^0.2.0",
    "firebase": "^10.1.0",
    "imagemin-sharp": "^1.0.6",
    "lit": "^2.8.0",
    "lit-router": "^0.2.2",
    "page": "^1.11.6",
    "pica": "^9.0.1",
    "plyr": "^3.7.8",
    "sharp": "^0.32.4",
    "tailwindcss": "^3.3.2",
    "wouter": "^2.11.0"
  },
  "devDependencies": {
    "@lit-labs/router": "^0.1.1",
    "@types/glob": "^8.1.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "concurrently": "^8.2.0",
    "copy": "^0.3.2",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "lit-html": "^2.7.5",
    "npm-run-all": "^4.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "twlit": "^0.0.1-alpha.37",
    "vite": "^4.4.8",
    "vite-plugin-node": "^3.0.2"
  },
  "main": "index.js",
  "license": "MIT",
  "author": "Agbaka Daniel U.",
  "repository": {
    "type": "git",
    "url": "+"
  },
  "description": "litPress is a cutting-edge web app powered by lit-html and Vite.js, combining speed and elegance to revolutionize content management and web development. Craft beautiful websites with ease, experience lightning-fast performance, and embrace a seamless content creation journey with litPress.",
  "keywords": [
    "litPress",
    "lit-html",
    "Vite.js",
    "web-app",
    "content-management",
    "web-development"
  ]
}
